.grid-x
  .cell.small-9
    %h2 County

    .grid-x.grid-padding-left
      .cell.small-6
        .card
          .card-section
            %h5
              %strong Volunteer Hours
            %p Some kind of description here about things.
            = form_tag(dashboard_download_report_path(format: :csv), method: 'get') do
              - ['County', 'Volunteer Hours'].each do |header|
                = hidden_field_tag 'headers[]', header
              = hidden_field_tag :data_method, HOURS_BY_COUNTY.underscore
              = hidden_field_tag :filename, HOURS_BY_COUNTY
              = hidden_field_tag :model, 'Office'

              = label_tag(:state)
              = select_tag :state, options_for_select(Address.distinct.pluck(:state))
              -# = submit_tag 'Query', data: { disable_with: false }
            .flex-container.flex-dir-row-reverse
              = link_to dashboard_download_report_path(headers: ['User ID', 'Total Volunteer Hours'], data_method: HOURS_BY_USER.underscore, filename: HOURS_BY_USER, model: 'User', format: :csv), target: '_blank', class: 'button' do
